{
  "name": "bulma",
  "version": "0.4.0",
  "homepage": "http://bulma.io",
  "author": "Jeremy Thomas <bbxdesign@gmail.com> (http://jgthms.com)",
  "contributors": ["Tony Ko <tony@htko.ca> (https://www.htko.ca/)"],
  "description": "Modern CSS framework based on Flexbox",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/htkoca/htko-bulma.git"
  },
  "license": "MIT",
  "keywords": [
    "css",
    "sass",
    "flexbox",
    "responsive",
    "framework"
  ],
  "bugs": {
    "url": "https://github.com/htkoca/htko-bulma/issues"
  },
  "devDependencies": {
    "autoprefixer": "^6.3.3",
    "captain-git-hook": "~1.0.5",
    "node-sass": "^3.4.2",
    "postcss-cli": "^2.5.1",
    "rimraf": "^2.6.1"
  },
  "scripts": {
    "build": "npm run build-clean && npm run build-sass && npm run build-autoprefix",
    "build-autoprefix": "postcss --use autoprefixer --output ../release/lib/bulma-0.4.0/css/bulma.css ../release/lib/bulma-0.4.0/css/bulma.css",
    "build-clean": "rimraf ../release/lib/bulma-0.4.0/css",
    "build-sass": "node-sass --output-style expanded --source-map true ../sources/lib/bulma-0.4.0/sass/bulma.sass ../release/lib/bulma-0.4.0/css/bulma.css",
    "start": "npm run build-sass -- --watch"
  }
}
